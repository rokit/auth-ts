{
  "name": "heroku-cra-node",
  "version": "3.0.0",
  "description": "How to use create-react-app with a custom Node API on Heroku",
  "engines": {
    "node": "12.14"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon server/index.ts",
    "build-server": "tsc -p .",
    "build": "yarn build-server && cd react-ui/ && yarn && yarn build"
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "argon2": "^0.25.1",
    "express": "^4.17.1",
    "google-auth-library": "^5.7.0",
    "jsonwebtoken": "^8.5.1",
    "node-fetch": "^2.6.0",
    "pg": "^7.15.1",
    "uuid": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mars/heroku-cra-node.git"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/node": "^13.1.0",
    "@types/node-fetch": "^2.5.4",
    "@types/pg": "^7.14.0",
    "@types/uuid": "^3.4.6",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4"
  }
}